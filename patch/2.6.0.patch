+			if ( $protected_posts )
+				$post_ids = wp_list_pluck( $protected_posts, 'ID' );
+
+			$this->object_cache_set( $cache_key, $post_ids, 86400 );
+		}
+
+		// return an array of exclude post IDs
+		return $post_ids;
+	}
+
