+	 * @return trees in order.
+	 */
+	protected function build_breadcrumb_trees( $kittens, array $previous_tree = array() ) {
+
+		$trees = $previous_tree;
+
+		foreach ( $kittens as $parent => $kitten ) {
+			if ( empty( $kitten ) ) {
+				//* Final cat.
+				$trees[] = $parent;
+			} else {
+				if ( 1 === count( $kitten ) ) {
+					//* Single tree.
