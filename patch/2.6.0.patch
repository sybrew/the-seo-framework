+		if ( 'relative' === $scheme ) {
+			$url = ltrim( preg_replace( '#^\w+://[^/]*#', '', $url ) );
+			if ( $url !== '' && $url[0] === '/' )
+				$url = '/' . ltrim( $url , "/ \t\n\r\0\x0B" );
